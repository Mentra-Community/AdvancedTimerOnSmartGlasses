  "tools": [
    {
      "id": "get_status",
      "description": "This tool gets the current status of the timer application. Use it when the user wants to know what mode is currently active or the current state of the timer, stopwatch, or pomodoro.",
      "activationPhrases": [
        "what's the status",
        "what's happening",
        "what mode am I in",
        "what's the current state",
        "what's going on",
        "show me the status"
      ],
      "parameters": {}
    },
    {
      "id": "start_timer",
      "description": "This tool starts a timer with the specified duration. Use it when the user wants to start a countdown timer.",
      "activationPhrases": [
        "start timer",
        "set timer for",
        "start a timer",
        "begin timer",
        "set timer",
        "start countdown"
      ],
      "parameters": {
        "duration": {
          "type": "string",
          "description": "The duration for the timer (e.g., '5 minutes', '1h 30m', '30 seconds').",
          "required": true
        }
      }
    },
    {
      "id": "pause_timer",
      "description": "This tool pauses the currently running timer. Use it when the user wants to pause the timer without stopping it completely.",
      "activationPhrases": [
        "pause timer",
        "pause the timer",
        "pause countdown",
        "pause the countdown",
        "stop timer temporarily"
      ],
      "parameters": {}
    },
    {
      "id": "resume_timer",
      "description": "This tool resumes a paused timer. Use it when the user wants to continue a timer that was previously paused.",
      "activationPhrases": [
        "resume timer",
        "resume the timer",
        "continue timer",
        "unpause timer",
        "restart timer"
      ],
      "parameters": {}
    },
    {
      "id": "stop_timer",
      "description": "This tool stops the timer completely. Use it when the user wants to end the timer and return to the menu.",
      "activationPhrases": [
        "stop timer",
        "stop the timer",
        "end timer",
        "cancel timer",
        "quit timer"
      ],
      "parameters": {}
    },
    {
      "id": "start_stopwatch",
