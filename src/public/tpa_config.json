      "label": "",
      "title": "General Settings"
    },
    {
      "type": "select",
      "key": "startup_mode",
      "label": "Initial Mode on Startup",
      "defaultValue": "menu",
      "options": [
        {
          "label": "Show Menu First",
          "value": "menu"
        },
        {
          "label": "Stopwatch",
          "value": "stopwatch"
        },
        {
          "label": "Timer",
