        "begin stopwatch",
        "start timing",
        "begin timing",
        "start the stopwatch"
      ],
      "parameters": {}
    },
    {
      "id": "pause_stopwatch",
      "description": "This tool pauses the currently running stopwatch. Use it when the user wants to pause timing without stopping it completely.",
      "activationPhrases": [
        "pause stopwatch",
        "pause the stopwatch",
        "pause timing",
        "pause the timing"
      ],
      "parameters": {}
    },
    {
      "id": "resume_stopwatch",
      "description": "This tool resumes a paused stopwatch. Use it when the user wants to continue timing that was previously paused.",
      "activationPhrases": [
        "resume stopwatch",
        "resume the stopwatch",
        "continue stopwatch",
        "unpause stopwatch",
        "continue timing"
      ],
      "parameters": {}
